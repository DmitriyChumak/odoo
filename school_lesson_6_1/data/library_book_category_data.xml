<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Master data for book categories -->
    <record id="library_category_fiction" model="library.book.category">
        <field name="name">Fiction</field>
        <field name="description">Fiction books category</field>
    </record>
    <record id="library_category_nonfiction" model="library.book.category">
        <field name="name">Non-Fiction</field>
        <field name="description">Non-Fiction books category</field>
    </record>
    <record id="library_category_scifi" model="library.book.category">
        <field name="name">Science Fiction</field>
        <field name="description">Science Fiction books category</field>
    </record>
</odoo>
