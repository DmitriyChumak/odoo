<odoo>
    <!-- Rule to restrict 'trainee' group to modify only recent authors (created in last 30 days) -->
    <record id="library_author_trainee_rule" model="ir.rule">
        <field name="name">Library Author Trainee Rule</field>
        <field name="model_id" ref="school_lesson_6_2.model_library_author"/>
        <field name="domain_force">[('recent_author', '=', True)]</field>
        <field name="groups" eval="[(4, ref('school_lesson_6_2.group_library_trainee'))]"/>
    </record>
</odoo>
