<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define new group 'Trainee' -->
    <record id="group_library_trainee" model="res.groups">
        <field name="name">Trainee</field>
        <field name="category_id" ref="school_lesson_6_1.module_category_library"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('school_lesson_6_1.group_library_user')), (4, ref('school_lesson_6_1.group_library_manager'))]"/>
    </record>

    <!-- Record rule to limit access to library.author for trainees -->
    <record id="library_author_trainee_rule" model="ir.rule">
        <field name="name">Library Author Trainee Rule</field>
        <field name="model_id" ref="model_library_author"/>
        <field name="domain_force">[('recent_author', '=', True)]</field>
        <field name="groups" eval="[(4, ref('school_lesson_6_2.group_library_trainee'))]"/>
    </record>
</odoo>
